<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
            <input type="hidden" class="form-control" id="NameTextField"
                placeholder="Survey Topic" name="numberOfQuestion" value="2" required>
            <!--<input type="hidden" class="form-control" id="NameTextField"
                placeholder="Survey Topic" name="userid" value="<%= userid %>" required>-->

              <div class="form-group">
                <label for="NameTextField">Survey Topic</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Survey Topic" name="topic" value="" required>
              </div>

            <% for (let count = 1; count <= 2; count++) { %>
            <div class="form-group">
                <label for="NameTextField">Question Topic<%= count %></label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Question" name="questionTopic<%=count%>" value="" required>
              </div>
              <div class="form-group">
                <label for="CostTextField">Answer 1</label>
                <input type="text" class="form-control" id="CostTextField"
                placeholder="Question" name="questionAns<%=count%>1" value=""  required>
              </div>
              <div class="form-group">
                <label for="CostTextField">Answer 2</label>
                <input type="text" class="form-control" id="CostTextField"
                placeholder="Question" name="questionAns<%=count%>2" value=""  required>
              </div>
              <div class="form-group">
                <label for="CostTextField">Answer 3</label>
                <input type="text" class="form-control" id="CostTextField"
                placeholder="Question" name="questionAns<%=count%>3" value=""  required>
              </div>
              <% } %>

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/surveys/create" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>
